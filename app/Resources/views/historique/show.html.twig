{% extends 'base.html.twig' %}

{% block body %}
    <h1>Historique</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ historique.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if historique.date %}{{ historique.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Distancetotal</th>
                <td>{{ historique.distanceTotal }}</td>
            </tr>
            <tr>
                <th>Badges</th>
                <td>{{ historique.badges }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('historique_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('historique_edit', { 'id': historique.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
